{% extends 'base.html.twig' %}

{% block title %}Share {{ album.name }} - Photo Portfolio{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="fas fa-share-alt"></i> Share Album: {{ album.name }}
                        </h3>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-4">
                            Share this album with others by email. They will receive a unique link to access the album.
                        </p>

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.emails) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.message) }}
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Send Invitations
                            </button>
                            <a href="{{ path('app_album_view', {uuid: album.uuid}) }}"
                               class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
