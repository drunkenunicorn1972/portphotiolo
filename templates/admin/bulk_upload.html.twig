{% extends 'base.html.twig' %}

{% block title %}Bulk Photo Upload{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="fas fa-upload"></i> Bulk Photo Upload
                        </h3>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle"></i> {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle"></i> {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>How it works:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Select an album where photos will be uploaded</li>
                                <li>Choose multiple photos (hold Ctrl/Cmd to select multiple)</li>
                                <li>Photos will be automatically analyzed with AI for titles, descriptions, and tags</li>
                                <li>EXIF data (camera settings, GPS, etc.) will be extracted automatically</li>
                                <li>Multiple image sizes will be generated for optimal performance</li>
                                <li>You can edit all information after upload</li>
                            </ul>
                        </div>

                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="mb-4">
                            {{ form_label(form.album, 'Album', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.album) }}
                            {{ form_errors(form.album) }}
                            <div class="form-text">
                                Select the album where you want to upload the photos
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.photos, 'Select Photos', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.photos) }}
                            {{ form_errors(form.photos) }}
                            <div class="form-text">
                                You can select multiple photos at once (Max 10MB per photo)
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-cloud-upload-alt"></i> Upload Photos
                            </button>
                            <a href="{{ path('members') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-body">
                        <h5><i class="fas fa-question-circle"></i> Supported Formats</h5>
                        <p class="mb-0">JPEG, PNG, GIF, WebP</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .form-control:invalid {
            border-color: #dc3545;
        }
        .form-control:valid {
            border-color: #198754;
        }
    </style>
{% endblock %}
