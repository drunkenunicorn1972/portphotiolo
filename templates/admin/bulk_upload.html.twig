{% extends 'base.html.twig' %}

{% block title %}Bulk Photo Upload{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Bulk Photo Upload</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.album) }}
            {{ form_widget(form.album) }}
            {{ form_errors(form.album) }}
        </div>

        <div class="mb-3" data-controller="dropzone">
            {{ form_label(form.photos) }}

            <div class="dropzone-container"
                 data-dropzone-target="dropzone"
                 style="border: 2px dashed #ccc; border-radius: 8px; padding: 40px; text-align: center; background: #f8f9fa; cursor: pointer; transition: all 0.3s;"
                 data-action="click->dropzone#triggerFileInput">

                <div class="dropzone-content">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-cloud-upload mb-3" viewBox="0 0 16 16" style="color: #6c757d;">
                        <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383"/>
                        <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708z"/>
                    </svg>
                    <h5>Drag & Drop Photos Here</h5>
                    <p class="text-muted">or click to browse</p>
                    <p class="text-muted small">Supports: JPEG, PNG, GIF, WebP (max 100MB per file)</p>
                </div>

                {{ form_widget(form.photos, {'attr': {'style': 'display: none;', 'data-dropzone-target': 'input'}}) }}
            </div>

            <div class="mt-3" data-dropzone-target="preview">
                <p class="text-muted">No files selected</p>
            </div>

            {{ form_errors(form.photos) }}
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Upload Photos</button>
            <a href="{{ path('members') }}" class="btn btn-secondary">Cancel</a>
        </div>
    {{ form_end(form) }}
</div>

<style>
    .dropzone-container.dragover {
        border-color: #0d6efd !important;
        background: #e7f1ff !important;
        transform: scale(1.02);
    }

    .file-list {
        max-height: 400px;
        overflow-y: auto;
    }

    .file-item {
        padding: 8px;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 4px;
    }
</style>
{% endblock %}
