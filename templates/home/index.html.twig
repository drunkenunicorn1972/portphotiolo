{% extends 'base.html.twig' %}

{% block title %}Home - Photo Portfolio{% endblock %}

{% block body %}
    {# Hero Image Slider #}
    {% if recentPhotos is not empty %}
        <div id="heroCarousel" class="carousel slide hero-slider" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {% for i in 0..(recentPhotos|length - 1) %}
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="{{ i }}"
                            class="{% if i == 0 %}active{% endif %}" aria-label="Slide {{ i + 1 }}"></button>
                {% endfor %}
            </div>

            <div class="carousel-inner">
                {% for photo in recentPhotos %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <picture>
                            <source media="(max-width: 768px)"
                                    srcset="{{ asset('uploads/photos/' ~ (photo.filenameTablet ?? photo.filename)) }}">
                            <source media="(max-width: 1920px)"
                                    srcset="{{ asset('uploads/photos/' ~ (photo.filenameDesktop ?? photo.filename)) }}">
                            <img src="{{ asset('uploads/photos/' ~ photo.filename) }}"
                                 alt="{{ photo.name }}"
                                 loading="lazy">
                        </picture>
                        <div class="carousel-caption">
                            <h3>{{ photo.name }}</h3>
                            {% if photo.description %}
                                <p>{{ photo.description|slice(0, 100) }}{% if photo.description|length > 100 %}...{% endif %}</p>
                            {% endif %}
                            <a href="{{ path('app_photo_view', {id: photo.id}) }}" class="btn btn-primary">
                                <i class="fas fa-eye"></i> View Photo
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {% endif %}

    {# Albums Section #}
    <div class="container">
        <h2 class="section-title">
            <i class="fas fa-images"></i> Photo Albums
        </h2>

        {% if albums is empty %}
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle"></i> No albums available yet. Check back soon!
            </div>
        {% else %}
            <div class="row g-4">
                {% for album in albums %}
                    <div class="col-md-4 col-lg-3">
                        <div class="card album-card">
                            {% if album.coverImage %}
                                <img src="{{ asset('uploads/albums/' ~ album.coverImage) }}"
                                     class="album-thumbnail"
                                     alt="{{ album.name }}"
                                     loading="lazy">
                            {% elseif album.photos|length > 0 %}
                                {% set firstPhoto = album.photos.first %}
                                <img src="{{ asset('uploads/photos/' ~ (firstPhoto.filenameThumbnail ?? firstPhoto.filename)) }}"
                                     class="album-thumbnail"
                                     alt="{{ album.name }}"
                                     loading="lazy">
                            {% else %}
                                <div class="album-thumbnail bg-secondary d-flex align-items-center justify-content-center">
                                    <i class="fas fa-image fa-5x text-white opacity-50"></i>
                                </div>
                            {% endif %}

                            <div class="card-body album-card-body">
                                <h5 class="card-title">{{ album.name }}</h5>

                                {% if album.description %}
                                    <p class="card-text text-muted">
                                        {{ album.description|slice(0, 80) }}{% if album.description|length > 80 %}...{% endif %}
                                    </p>
                                {% endif %}

                                <div class="album-stats">
                                    <span>
                                        <i class="fas fa-camera"></i> {{ album.photoCount }} photos
                                    </span>
                                    <span>
                                        <i class="fas fa-eye"></i> {{ album.viewCount }} views
                                    </span>
                                </div>

                                <a href="{{ path('app_album_view', {id: album.id}) }}"
                                   class="btn btn-primary w-100 mt-3">
                                    <i class="fas fa-folder-open"></i> View Album
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
