
{% extends 'base.html.twig' %}

{% block title %}Home - Photo Portfolio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% if recentPhotos is not empty %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    {% endif %}
{% endblock %}

{% block body %}
    {# Hero Conveyor Belt Carousel #}
    {% if recentPhotos is not empty %}
        <div class="hero-swiper-container">
            <div class="container">
                <h2 class="section-title text-center mb-4">
                    Recent Photos
                </h2>
            </div>

            <div class="swiper hero-swiper">
                <div class="swiper-wrapper">
                    {% for photo in recentPhotos %}
                        <div class="swiper-slide">
                            <div class="photo-slide-wrapper">
                                <picture>
                                    <source media="(max-width: 768px)"
                                            srcset="{{ asset('uploads/photos/' ~ (photo.filenameTablet ?? photo.filename)) }}">
                                    <source media="(max-width: 1920px)"
                                            srcset="{{ asset('uploads/photos/' ~ (photo.filenameTablet ?? photo.filename)) }}">
                                    <img src="{{ asset('uploads/photos/' ~ photo.filenameTablet) }}"
                                         alt="{{ photo.name }}"
                                         loading="lazy">
                                </picture>

                                <div class="photo-overlay">
                                    <h4>{{ photo.name }}</h4>
                                    {% if photo.description %}
                                        <p>{{ photo.description|slice(0, 80) }}{% if photo.description|length > 80 %}...{% endif %}</p>
                                    {% endif %}
                                    <a href="{{ path('app_photo_view', {id: photo.id}) }}" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> View Photo
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Navigation buttons -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>

                <!-- Pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
    {% endif %}

    {# Albums Section #}
    <div class="container">
        <h2 class="section-title">
            Photo Albums
        </h2>

        {% if albums is empty %}
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle"></i> No albums available yet. Check back soon!
            </div>
        {% else %}
            <div class="row g-4">
                {% for album in albums %}
                    <div class="col-md-4 col-lg-3">
                        <div class="card album-card">
                            {% if album.coverImage %}
                                <img src="{{ asset('uploads/albums/' ~ album.coverImage) }}"
                                     class="album-thumbnail"
                                     alt="{{ album.name }}"
                                     loading="lazy">
                            {% elseif album.photos|length > 0 %}
                                {% set firstPhoto = album.photos.first %}
                                <img src="{{ asset('uploads/photos/' ~ (firstPhoto.filenameThumbnail ?? firstPhoto.filename)) }}"
                                     class="album-thumbnail"
                                     alt="{{ album.name }}"
                                     loading="lazy">
                            {% else %}
                                <div class="album-thumbnail bg-secondary d-flex align-items-center justify-content-center">
                                    <i class="fas fa-image fa-5x text-white opacity-50"></i>
                                </div>
                            {% endif %}

                            <div class="card-body album-card-body">
                                <h5 class="card-title">{{ album.name }}</h5>

                                {% if album.description %}
                                    <p class="card-text text-muted">
                                        {{ album.description|slice(0, 80) }}{% if album.description|length > 80 %}...{% endif %}
                                    </p>
                                {% endif %}

                                <div class="album-stats">
                                    <span>
                                        <i class="fas fa-camera"></i> {{ album.photoCount }} photos
                                    </span>
                                    <span>
                                        <i class="fas fa-eye"></i> {{ album.viewCount }} views
                                    </span>
                                </div>

                                <a href="{{ path('app_album_view', {id: album.id}) }}"
                                   class="btn btn-primary w-100 mt-3">
                                    <i class="fas fa-folder-open"></i> View Album
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if recentPhotos is not empty %}
        <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
        <script>
            const swiper = new Swiper('.hero-swiper', {
                // Display multiple slides at once
                slidesPerView: 'auto',
                spaceBetween: 20,
                centeredSlides: true,
                loop: true,

                // Auto-play
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                    pauseOnMouseEnter: true,
                },

                // Speed
                speed: 800,

                // Smooth momentum
                freeMode: false,

                // Navigation arrows
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },

                // Pagination dots
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                    dynamicBullets: true,
                },

                // Responsive breakpoints
                breakpoints: {
                    // Mobile
                    320: {
                        spaceBetween: 10,
                    },
                    // Tablet
                    768: {
                        spaceBetween: 15,
                    },
                    // Desktop
                    1024: {
                        spaceBetween: 20,
                    }
                },

                // Keyboard control
                keyboard: {
                    enabled: true,
                },

                // Mouse wheel control
                mousewheel: {
                    forceToAxis: true,
                },
            });
        </script>
    {% endif %}
{% endblock %}
